*,
*:before,
*:after {
  box-sizing: border-box;
  -moz-box-sizing: border-box;
}

body {
  font: 100% sans-serif;
  background: #666 url(<%= asset_path 'bg_blue.png' %>) fixed 0 0;
  margin: 0;
  padding: 0;
  text-align: center;
  color: #000000;
}

img.logo {
  padding: 10px 0 0 10px;
  border: none;
}

#container {
  width: 90%;
  margin: 0 auto;
  text-align: left;
  overflow: hidden;
}

h1 {
  margin: 0 0 10px 0;
  font-size: 25px;
}

#headerContent {
  width: 96%;
  position: relative;
  margin: 0 auto;
  padding: 0 10px 0 10px;
}

#mainContent {
  background: #e7e7e7;
  width: 96%;
  margin: 5px auto;
  border-radius: 5px;
  border: 1px solid #333;
  padding:10px 10px 5px 10px;
  overflow: hidden;
}

#extraContent {
  background: #7a8faa;
  width: 96%;
  margin: 5px auto;
  border-radius: 5px;
  border: 1px solid #333;
  padding: 10px 10px 5px 10px;
  overflow: hidden;
}

form {
  font-size: 14px;
  margin: 0;
}

input[type="text"] {
  font-size: 11px;
  width: 20%;
}

.box {
  background: #f9f9f9;
  border-radius: 5px;
  border: 1px solid #e1e1e1;
  padding: 5px;
  margin-bottom: 5px;
  overflow: hidden;
}

.box .box:nth-child(odd) {
  background: #bbb;
}

.box .box:nth-child(even) {
  background: #ddd;
}

a {
   text-decoration: none;
   color: #444;
   display: inline-block;
   font-weight: bold;
   font-size: 18px;
   margin: 2px 0 0 0;
}

span.link {
  text-decoration: none;
  color: #444;
  display: inline-block;
  font-weight: bold;
  font-size: 18px;
  margin: 2px 0 0 0;
  cursor: pointer;
}

span.status span {
  display: inline-block;
  font-size: 11px;
  padding: 3px 15px;
  border-radius: 15px;
  color: #fff;
  margin-left: 10px;
}

span.status a {
  font-weight: normal;
}

span.failure {
  background: #cf2222;
}

span.success {
  background: #27771f;
}

span.in_progress {
  background: #3c88c8;
}

span.progress_indicator {
  background-image: url(<%= asset_path 'progressindicator.gif' %>);
  color: #444;
  padding: 6px 5px 5px 7px;
}

div.buttons {
  width: 200px;
  display: inline-block;
  float: right;
  padding-top: 3px;
}

.button {
  line-height: 110%;
  background: #666;
  padding: 2px 5px;
  color: #fff;
  text-decoration: none;
  font-weight: bold;
  border-radius: 5px;
  text-shadow: 0 1px 1px #222;
  border: 1px solid #999;
  float:right;
  font-size: 13px;
  margin: 0 0 0 7px;
  cursor: pointer;
}

.button.green {
  background: #748dad;
}

.button.yellow {
  background: #748dad;
}

.button.red {
  background: #929292;
}

.button.disabled {
  opacity: 0.5;
  cursor: default;
}

div.title {
  margin-bottom: 3px;
}

input[type="submit"] {
  background: #666;
  padding: 2px 5px;
  color: #fff;
  text-decoration: none;
  font-weight: bold;
  border-radius: 5px;
  text-shadow: 0 1px 1px #222;
  border: 1px solid #999;
  float:right;
}

input[type="submit"].green {
  background: #748dad;
  margin-right:7px;
}

input[type="submit"].red {
  background: #929292;
}

pre {
  overflow: auto;
}

pre.log {
  background-color: #fffacd;
  white-space: pre-wrap;
}

.overlay {
  position: fixed;
  top: 10%;
  left: 5%;
  display: none;
  z-index: 10000;
  width: 90%;
  height: 80%;
  border: 1px solid #666;
  border-radius: 8px;
  box-shadow: 0 0 90px 5px #000;
  background-color: #fffacd;
}

.overlay .container {
  position: absolute;
  width: 100%;
  height: 100%;
  overflow: hidden;
  border-radius: 8px;
}

.overlay pre.log {
  position: absolute;
  margin-top: 0;
  height: 100%;
  left: 8px;
  right: 0;
  overflow: auto;
}

.overlay .close {
  background-image: url(<%= asset_path 'close.png' %>);
  position: absolute;
  right: -15px;
  top: -15px;
  cursor: pointer;
  height: 35px;
  width: 35px;
  z-index: 9000;
}

.error_overlay {
  background-color: rgba(0, 0, 0, 0.8);
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  color: #ffffff;
  font-size: 20px;
  text-shadow: 1px 1px 2px #000000;
  display: none;
}

.error_overlay h1 {
  margin-top: 10%;
}

.error_overlay .messages_background {
  background-color: rgba(100, 100, 100, 0.8);
  position: absolute;
  width: 80%;
  height: 60%;
  border-radius: 20px;
  left: 10%;
}

.error_overlay .messages_crop {
  width: 100%;
  height: 100%;
  border-radius: 20px;
  overflow: hidden;
  padding: 10px;
}

.error_overlay .messages {
  overflow: auto;
  height: 100%;
  width: 100%;
}

.error_overlay .close {
  background-image: url(<%= asset_data_uri 'close.png' %>);
  position: absolute;
  right: -15px;
  top: -15px;
  cursor: pointer;
  height: 35px;
  width: 35px;
  z-index: 9000;
}

#overlay .details {
  top: 8px;
  bottom: 8px;
  left: 8px;
  right: 8px;
  position: absolute;
}

#spinner {
  height: 40px;
  position: absolute;
  background: white url(<%= asset_path 'loader.gif' %>) no-repeat center center;
  opacity: 0.5;
  right: 120px;
  top: 25px;
  z-index: 100;
  width: 40px;
  display: none;
  border-radius: 20px;
}

#search {
  position: absolute;
  right: 0;
  top: 35px;
  width: 97px;
}

