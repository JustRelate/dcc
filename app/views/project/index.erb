<% content_for :extra_content do -%>
  <%= form_for :project, :url => {:action => :create} do |f| -%>
    Name: <%= f.text_field :name %>
    URL: <%= f.text_field :url %>
    Branch: <%= f.text_field :branch %>
    <%= submit_tag 'Anlegen' %>
  <% end -%>
<% end -%>

<% content_for :header_content do -%>
  <input id="search" type="text" placeholder="Suche nach"
      onchange="update_search()" onkeyup="update_search()" />
  <div id="spinner"></div>
<% end -%>

<script>
  $(document).ready(function() { render_gui(); });
</script>
