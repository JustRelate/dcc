<table class='projects'>
<% @projects.sort_by {|p| p.name.downcase}.each do |project| -%>
  <tr class="<%= status_css_class(project_status(project)) %>">
    <td class='name'><%= link_to project_display_value(project), :action => "show", :id => project %></td>
    <td><%= project_display_status(project) %></td>
    <td><pre><%= project.last_system_error %></pre></td>
    <td>
    <% form_for :project, :url => {:action => :build, :id => project} do |f| -%>
      <%= submit_tag 'Bauen' %>
    <% end -%>
    </td>
    <td>
    <% form_for :project, :url => {:action => :delete, :id => project} do |f| -%>
      <%= submit_tag 'LÃ¶schen' %>
    <% end -%>
    </td>
  </tr>
<% end -%>
</table>
<% form_for :project, :url => {:action => :create} do |f| -%>
  Name: <%= f.text_field :name %>
  URL: <%= f.text_field :url %>
  Branch: <%= f.text_field :branch %>
  <%= submit_tag 'Anlegen' %>
<% end -%>
