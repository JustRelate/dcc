<% content_for :extra_content do -%>
  <%= form_for :project, :url => {:action => :create} do |f| -%>
    <%= f.label :name, t('project.name') %>: <%= f.text_field :name %>
    <%= f.label :url, t('project.url') %>: <%= f.text_field :url %>
    <%= f.label :branch, t('project.branch') %>: <%= f.text_field :branch %>
    <%= f.check_box :personal, checked: true %><%= f.label :personal, t('project.personal') %>
    <%= submit_tag t('project.create') %>
  <% end -%>
<% end -%>

<% content_for :header_content do -%>
  <input id="search" type="text" placeholder="Suche nach"
      onchange="update_search()" onkeyup="update_search()" />
  <div id="spinner"></div>
<% end -%>

<script>
  $(document).ready(function() { render_gui(); });
</script>
