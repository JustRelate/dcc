<% build = @bucket.build -%>
<% project = build.project -%>
<h1>
  Projekt <%= project.name %>,
  Build <%= link_to build_display_identifier(build), :action => 'show_build', :id => build %>
  <%= if (href = build_gitweb_url(build)); "(#{link_to "Commit anschauen", href})"; end %>
  Task <%= @bucket.name %></h1>
</h1>
<%= render :partial => "bucket_status", :locals => {:bucket => @bucket} %>
<pre><%= @bucket.log %></pre>

<% content_for :extra_content do -%>
  <% unless @bucket.logs.blank? -%>
<pre>
<% @bucket.logs.each do |log| -%><%= log.log %><% end -%>
</pre>
  <% end -%>
<% end -%>
