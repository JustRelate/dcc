#!/usr/bin/env ruby

require 'rubygems'
require 'yaml'
require 'active_record'
require 'action_mailer'
require 'fileutils'

FileUtils.chdir("#{File.dirname($0[0..0] == '/' ? $0 : "#{FileUtils.pwd}/#{$0}")}/..") do
  require 'lib/dcc_worker'
  require 'lib/ruby_backtracer/backtrace_nothing_swallowed'
  # FIXME: Konfig aus Datei lesen
  # -> memcached-Server(s)
  # -> DB-Verbindung
  # -> Log-Level
  # -> Gruppen-Bezeichnung

  ActiveRecord::Base.establish_connection(
      YAML::load(File.read('config/database.yml'))[ARGV[0] ? 'development' : 'production'])

  ActionMailer::Base.delivery_method = :sendmail

  DCCWorker.new(ARGV[0] || 'dcc', ['master-of-disaster.infopark:11211'],
      :log_level => Logger::DEBUG, :domain => 'infopark', :iteration_length => 10,
      :dictatorship_length => 300).run
end
